<!--pages/game/game.wxml-->
<view class="container">
  <view class="topBar">
    <text class="num-index">{{currentNum}}/{{count}}</text>
    <text class="timer">{{currentTime}}</text>
  </view>
  <view class="pre-equation">
    <text class="pre-result" style="background:{{flag}}">{{preEquation}}</text>
  </view>
  <view class="calculation">
    <text class="equation">{{equationText.equation}}</text>
  </view>
  <scroll-view class="equal-text" scroll-x="true">
    <text>{{result}}</text>
  </scroll-view>

  <view class="btn-box">
    <view class="btn-row">
      <button class="num-btn" bindtap='numBtn' data-num='1'>1</button>
      <button class="num-btn" bindtap='numBtn' data-num='2'>2</button>
      <button class="num-btn" bindtap='numBtn' data-num='3'>3</button>
    </view>
    <view class="btn-row">
      <button class="num-btn" bindtap='numBtn' data-num='4'>4</button>
      <button class="num-btn" bindtap='numBtn' data-num='5'>5</button>
      <button class="num-btn" bindtap='numBtn' data-num='6'>6</button>
    </view>
    <view class="btn-row">
      <button class="num-btn" bindtap='numBtn' data-num='7'>7</button>
      <button class="num-btn" bindtap='numBtn' data-num='8'>8</button>
      <button class="num-btn" bindtap='numBtn' data-num='9'>9</button>
    </view>
    <view class="btn-row">
      <button class="num-btn" bindtap='clearBtn'>C</button>
      <button class="num-btn" bindtap='numBtn' data-num='0'>0</button>
      <button class="num-btn" bindtap='nextBtn'>提交</button>
    </view>
  </view>
</view>